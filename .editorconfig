# Top-most EditorConfig file
root = true

# All files (Default to tabs for Java, etc.)
[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Overrides for Markdown and YAML
# GitHub renders tabs poorly in MD, and YAML forbids tabs entirely.
[*.{yml,yaml,md}]
indent_style = space
indent_size = 2